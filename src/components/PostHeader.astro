---
import { slugify } from "../js/utils";

// console.log('props', Astro.props.post.data)

const {title, description, author, date, tags} = Astro.props.post.data
const {slug} = Astro.props.post
---

<section>
    <h1>{title}</h1>
    <div class="post__categories">
        {
            tags && 
                tags.map((tag) => 
                    (
                        <a href={`../tag/${slugify(tag)}`}><small class={tag}>{tag}</small></a>
                    )
                )
        }
    </div>
    <div class="article__body">
        <div class="article__info">
            <span>{new Date(date).toLocaleDateString('en-GB')}</span>
            Â·
            <span>{author}</span>
        </div>
        <!-- Descrizione Articolo -->
        <p>{description}</p>
    </div>
</section>


<style>

    section{
        margin: 2rem 0;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--separator);
    }

    h1{
        color: var(--main-text);
        margin-bottom: 1rem;
    }

    .article__info, .article__body p{
        color: var(--secondary-text);
        margin-bottom: 1rem;
    }

    .post__categories {
        margin-top: 1rem;
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }

    .post__categories a {
        text-decoration: none;
    }
</style>